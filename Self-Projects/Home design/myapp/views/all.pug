extends layout

block content
  .main-container
    ul
  each val in data
    li(class='design-box')
      div(class='item-container')
        div(class='image-box')
          img(src= val.imageUrl)
        div(class='text-container')
          p(class='user-name')= 'Name: '+  val.name 
          p(class='design-style')='Design style: ' + val.designStyle
          p(class='description')= 'Description: ' + val.description
  form(method='get' action='/')
    button.btn.btn-primary(class='click-me' type='submit') Create your own design
