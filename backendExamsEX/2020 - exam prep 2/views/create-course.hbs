
<body>
    <div class="container">


        <main>
            <form class="text-center border border-light p-5" action="/courses/create" method="POST">
                <h1>Create Course</h1>
                <div class="form-group">
                    <label for="title">Course Title</label>
                    <input type="text" class="form-control" placeholder="Course name" name="title" value="{{form.title}}">
                </div>
                <div class="form-group">
                    <label for="description">Course Description</label>
                    <textarea class="form-control" placeholder="Description" name="description" value="{{form.description}}"></textarea>
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image url</label>
                    <input type="text" class="form-control" placeholder="Image Url" name="imageUrl" value="{{form.imageUrl}}">
                </div>
                <div class="form-check">
                    <input name="isPublic" type="checkbox" class="form-check-input" id="check-box" >
                    <label class="form-check-label" for="check-box">Public</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </main>



    </div>
</body>
