<body>
  <div class="container">
    <header>
      <ul>
        <li><img class="logo" src="/images/logo.png"></li>
        <li><a href="/">Browse</a></li>
        <li><a href="/create">Add a Cube</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </header>
    <main>
      <h1>Browser</h1>
      <form action="" method="">
        <input type="text" class="search" name="search" placeholder="Search...">
        <input min="1" max="5" type="number" name="from" class="difficulty" placeholder="Difficulty from...">
        <span>-</span>
        <input  min="1" max="6" type="number" name="to" class="difficulty" placeholder="Difficulty to...">
        <input type="submit" value="search">
      </form>

      {{#each cubes}}
      <div class="cube">

        <img class="cube"
          src={{this.imageUrl}}>
        <p class="name">{{this.name}}</p>
        <p><span>Difficulty level:</span> {{this.difficultyLevel}}</p>
        <a class="btn" href="/details/{{this.id}}">Details</a>


      </div>
      {{/each}}

